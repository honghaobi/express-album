extends ../layout

block content
  h1 Albums

  a(href="/albums/new") New Album

  table
    thead
      tr
        th ID
        th Genre
        th Artist
        th Album
    tbody
      for album in allAlbums
        tr
          td= album.id
          td= album.genre
          td= album.artist
          td
            a(href='/albums/' + album.id)= album.name
